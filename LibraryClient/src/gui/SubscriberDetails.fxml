<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SubscriberFormController">
   <children>
      <Label fx:id="lblId" layoutX="30.0" layoutY="50.0" text="ID:" />
      <TextField fx:id="txtId" layoutX="120.0" layoutY="45.0" />
      
      <Label fx:id="lblName" layoutX="30.0" layoutY="100.0" text="Name:" />
      <TextField fx:id="txtName" layoutX="120.0" layoutY="95.0" />
      
      <Label fx:id="lblPhone" layoutX="30.0" layoutY="150.0" text="Phone:" />
      <TextField fx:id="txtPhone" layoutX="120.0" layoutY="145.0" />
      
      <Label fx:id="lblEmail" layoutX="30.0" layoutY="200.0" text="Email:" />
      <TextField fx:id="txtEmail" layoutX="120.0" layoutY="195.0" />
      
      <Button fx:id="btnSave" layoutX="80.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleSave" text="Save" />
      <Button fx:id="btnClose" layoutX="180.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleClose" text="Close" />
   </children>
</AnchorPane>
